{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}\\npx",
            "cwd": "${workspaceFolder}",
            "args": [
                "jest",
                "--runInBand",
                "--watchAll=false"
            ]
        }
    ]
}